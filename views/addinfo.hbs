<!DOCTYPE html>
<html>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Add Info</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
  <script src='main.js'></script>

  <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
    integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
    crossorigin="anonymous"></script>
</head>

<body>

  <script>

    var socket = io.connect();
    socket.on("connection");

    const GetFormData = function () {
      var fNameDoc = document.getElementById("fname");
      var lNameDoc = document.getElementById("lname");
      var ageDoc = document.getElementById("age");
      var sexDoc = document.getElementById("sex");

      var fName = fNameDoc.value;
      var lName = lNameDoc.value;
      var age = ageDoc.value;
      var sex = sexDoc.value;


      const infoData = {
        firstName: fName,
        lastName: lName,
        age: age,
        sex: sex
      }

      socket.emit("addinfo", infoData);

      //Clear Doc
      fNameDoc.value = "";
      lNameDoc.value = "";
      ageDoc.value = "";
      sexDoc.value = "";

      //document.querySelector("h3").innerHTML = fName + " " + lName + " age : " + age + " sex: " + sex;
    }


  </script>

  <h2>Add your info</h2>


  <label for="fname">First name:</label><br>
  <input type="text" id="fname" name="fname" value=""><br><br>

  <label for="lname">Last name:</label><br>
  <input type="text" id="lname" name="lname" value=""><br><br>

  <label for="age">Age:</label><br>
  <input type="text" id="age" name="age" value=""><br><br>

  <label for="sex">Sex:</label><br>
  <input type="text" id="sex" name="sex" value=""><br><br>

  <input type="submit" value="Submit" onclick=GetFormData()>

  <h3></h3>
</body>

</html>